{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!.source"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "next/link": "Use the SafeLink component from '@/components/SafeLink' instead of next/link"
            }
          }
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "natural",
            "groups": [
              ":NODE:",
              ":BUN:",
              ":BLANK_LINE:",
              ["next", "next/**"],
              ["react", "react/**"],
              ":BLANK_LINE:",
              ["fumadocs-ui", "fumadocs-ui/**"],
              ["fumadocs-core", "fumadocs-core/**"],
              ["fumadocs-mdx", "fumadocs-mdx/**"],
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/lib/*",
              "@/components/*",
              "@/*",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  }
}
